{% if batch_actions|length %}
    <div class="pull-left">
        <select class="js-batch-action form-control pull-left">
            <option value="" selected>Batch actions</option>
            {% for action, link in batch_actions %}
                <option value="{{ link }}">{{ action }}</option>
            {% endfor %}
        </select>
        <button type="submit" class="btn btn-default js-batch-process" href="#">Go!</button>
    </div>
{% endif %}
