<th>
    {% if query['direction'] is defined and query['direction'] == 'asc' %}
        {% set direction = 'desc' %}
    {% else %}
        {% set direction = 'asc' %}
    {% endif %}
    {% if column.sortable %}
        <a href="{{ path('opifer.crud.index', query|merge({'sort': 'a.' ~ column.property, 'direction': direction})) }}">
            {{ column.label }}
            <span class="fa fa-caret-{{ (direction == 'desc') ? 'down' : 'up' }}"></span>
        </a>
    {% else %}
        {{ column.label }}
    {% endif %}
</th>
