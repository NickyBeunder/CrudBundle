<div class="row">
    <div class="col-xs-8">
        <form action="#">
            <div class="btn-group">
                <a href="#" class="btn btn-default" data-toggle="collapse" data-target="#filter-panel">Filters</a>
            </div>
        </form>
    </div>
    <div class="col-xs-4">
        <form class="pull-right" role="form" action="#" method="POST">
            <div class="form-group">
                <div class="input-group">
                    <input name="filterfields" id="filterfields" type="search" placeholder="{{ 'datagrid.search.placeholder'|trans|capitalize }}" class="form-control"/>
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </div>
        </form>
    </div>
</div>
{% if filter_form.conditions is defined %}
    <div class="row collapse" id="filter-panel">
        <div class="col-xs-12">
            {{ form_start(filter_form) }}
                <div class="form-group">
                    <div class="btn-group">
                        {{ form_widget(filter_form.conditions) }}
                    </div>
                </div>
            {{ form_end(filter_form) }}
        </div>
    </div>
{% endif %}
